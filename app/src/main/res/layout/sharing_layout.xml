<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#F6F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/network" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="Shopping together is easy. Invite another person"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7086D4"
            android:drawableLeft="@drawable/ic_sms"
            android:fontFamily="@font/canava_grotesk_regular"
            android:paddingStart="15dp"
            android:text="send invitation"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/quicksand_regular"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="You can send an invitation using email adress "
            android:textSize="18dp" />

        <Button
            android:id="@+id/email_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7086D4"
            android:drawableLeft="@drawable/ic_email"
            android:fontFamily="@font/canava_grotesk_regular"
            android:paddingStart="15dp"
            android:text="email address"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:clickable="true"
            app:backgroundTint="#7086D4"
            app:srcCompat="@drawable/ic_send_foreground" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>